@model wedding.Models.Wedding
<div class="row">
    <div class="col-sm-10">
        <h1>Plan Your Wedding</h1>
    </div>
    <div class="col-sm-2">
        <a href="/list">Dashboard</a>
        <a href="/logout">Log Out</a>
    </div>
</div>
<form asp-controller="Wedding" asp-action="add" method="post">
    <div class="form-group">
        <label asp-for="Wedder1"></label>
        <input asp-for="Wedder1">
    </div>
    <div class="form-group">
        <label asp-for="Wedder2"></label>
        <input asp-for="Wedder2">
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date">
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address">
    </div>
    <input type="submit" value="Create">
</form>