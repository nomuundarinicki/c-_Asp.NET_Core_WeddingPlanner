<div class= "col-sm-6">
    <h1> Login : </h1>
    <form asp-controller="User" asp-action="Login" method="post">
        <div class="form-group">
            <label> Email </label>
            <input class="form-control" name="Email">
        </div>
        <div class="form-group">
            <label> Password </label>
            <input class="form-control" type="password" name="PasswordToCheck">
        </div>
        <input class ="form-control" type="text" value="Login">
    </form>

    <p style="color:red"> @ViewBag.error</p> 
    <a href = "/Register"> Need to Register </a>
</div>               



